{
	"name": "friendsoftypo3/extension-builder",
	"type": "typo3-cms-extension",
	"description": "Tool to kickstart and maintain TYPO3 extensions",
	"keywords": [
		"TYPO3",
		"extension",
		"extension_builder"
	],
	"homepage": "https://github.com/FriendsOfTYPO3/extension_builder",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Nico de Haen",
			"role": "Developer"
		},
		{
			"name": "extension_builder Development Team",
			"role": "Developer"
		}
	],
	"require": {
		"typo3/cms-core": "^7.6"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.2",
		"mikey179/vfsstream": "^1.6.0",
		"phpunit/phpunit": "~4.8.0",
		"typo3/cms": "^7.6"
	},
	"autoload": {
		"psr-4": {
			"EBT\\ExtensionBuilder\\": "Classes/",
			"PhpParser\\": "Resources/Private/PHP/PHP-Parser/lib/PhpParser/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"EBT\\ExtensionBuilder\\Tests\\": "Tests/",
			"TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
			"TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
		}
	},
	"replace": {
		"typo3-ter/extension-builder": "self.version"
	},
	"config": {
		"bin-dir": ".Build/bin",
		"vendor-dir": ".Build/vendor",
		"preferred-install": {
			"typo3/cms": "source",
			"*": "dist"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/public/typo3conf/ext/",
			"[ -L .Build/public/typo3conf/ext/extension_builder ] || ln -snvf ../../../../. .Build/public/typo3conf/ext/extension_builder"
		],
		"unit-tests": "TYPO3_PATH_WEB=$PWD/.Build/public .Build/bin/phpunit --colors  -c .Build/vendor/typo3/cms/typo3/sysext/core/Build/UnitTests.xml --stop-on-failure Tests/Unit",
		"functional-tests": "TYPO3_PATH_WEB=$PWD/.Build/public typo3DatabaseName=extension_builder_tests typo3DatabaseHost=127.0.0.1 typo3DatabaseUsername=simon typo3DatabasePassword=secret typo3DatabasePort=3306 .Build/bin/phpunit --colors -c .Build/vendor/typo3/cms/typo3/sysext/core/Build/FunctionalTests.xml --stop-on-failure Tests/Functional",
		"test": [
			"@test-php-cs-fixer",
			"@unit-tests",
			"@functional-tests"
		],
		"test-php-cs-fixer": ".Build/bin/php-cs-fixer fix --config=.php-cs-fixer.php -v --dry-run --stop-on-violation --using-cache=no"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "extension_builder",
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"app-dir": ".Build",
			"web-dir": ".Build/public"
		}
	}
}
